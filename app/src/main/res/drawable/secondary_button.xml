<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/colorPrimary"/>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#8CB892F6"/>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
</selector>